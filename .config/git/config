# :: Generic
[core]
	excludesFile = "~/.config/git/ignore"
	pager = delta
	compression = 9
	whitespace = trailing-space
[maintenance]
	auto = true
	strategy = incremental
[interactive]
	diffFilter = delta --color-only --diff-so-fancy
[help]
	autocorrect = prompt
[rerere]
	enabled = true
	autoUpdate = true
[column]
	ui = auto
[init]
	defaultBranch = master
[status]
	branch = true
[commit]
	gpgsign = true
	verbose = true
[tag]
	sort = -version:refname
	gpgSign = true
[branch]
	sort = -committerdate
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[merge]
	conflictstyle = zdiff3
[color]
	ui = always
	branch = no
	status = auto
	diff = false
	interactive = always
	grep = always
	pager = yes
	decorate = always
	showbranch = always

