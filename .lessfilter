#! /usr/bin/env bash
has_cmd() {
	for opt in "$@"; do
		command -v "$opt" >/dev/null
	done
}

mime=$(file -Lbs --mime-type "$1")
category=${mime%%/*}
kind=${mime##*/}

# https://github.com/wofr06/lesspipe/pull/107
if [ -d "$1" ]; then
	if has_cmd eza; then
		eza --color=always --group-directories-first -TDa --git --git-ignore -L 1 "$1" | head -200
	fi
elif [ "$category" = image ]; then
	chafa "$1"
	exiftool "$1"
elif [ "$category" = text ]; then
	bat --color=always --paging=never "$1"
else
	lesspipe.sh "$1" | bat --color=always --paging=never
fi
